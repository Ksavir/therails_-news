<h1>Editing comment</h1>
<div class="border rounded-4 p-3">
  <%= render "form", comment: @comment %>
  <div class="mt-3 d-flex gap-4">
    <%= link_to "Show more", post_comment_path(@post, @comment), class: "link-warning" %>
    <%= link_to "Back", post_comments_path(@post), class: "link-warning" %>
  </div>
</div>
