<p style="color: green"><%= notice %></p>
<h1>Comments</h1>
<div id="comments">
  <% @comments.each do |comment| %>
    <%= render comment %>
    <p>
      <%= link_to "Show this comment", post_comment_path(@post, comment) %>
    </p>
  <% end %>
</div>
<% if user_signed_in? %>
  <%= link_to "New comment", new_post_comment_path(@post) %>
<% end %>
